<UserControl x:Class="FileBrowserControlsLibrary.FileBrowserNavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel>
        <Button Style="{StaticResource RoundButtonStyle}" Grid.Column="0" Content="&lt;-" Width="25"/>
        <Button Style="{StaticResource RoundButtonStyle}" Grid.Column="1" Content="-&gt;"  Width="25"/>
        <TextBox Grid.Column="2"  Text="TextBox" HorizontalAlignment="Stretch" />
    </DockPanel>
</UserControl>
